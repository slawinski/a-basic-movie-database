<div class="container">
  <div class="flex-container">
    <h3 class="mr-1">{{movie.[0].title}} ({{movie.[0].year}})</h3>
    <a href="/">
      <button class="btn btn-outline-secondary mr-1">Back</button>
    </a>
    <form action="/{{movie.[0].id}}?_method=DELETE" method="post">
      <button type="submit" class="btn btn-default btn-danger">
        Delete
      </button>
    </form>
  </div>
  <div class="mt-3">
  </div>
  <div class="flex-container mt-3">
    <div class="poster mr-1">
      <img src="{{movie.[0].poster}}" alt="Movie poster">
    </div>
    <div class="movie-info mr-1">
      <ul>
        <li>
          <strong>Release:</strong> {{movie.[0].released}}</li>
        <li>
          <strong>Genre:</strong> {{movie.[0].genre}}</li>
        <li>
          <strong>Country: </strong>{{movie.[0].country}}</li>
        <li>
          <strong>Runtime: </strong>{{movie.[0].runtime}}</li>
        <li>
          <strong>Director: </strong>{{movie.[0].director}}</li>
        <li>
          <strong>Writer: </strong>{{movie.[0].writer}}</li>
        <li>
          <strong>Actors: </strong>{{movie.[0].actors}}</li>
        <li>
          <strong>Plot: </strong>{{movie.[0].plot}}</li>
        <li>
          <strong>Rated: </strong>{{movie.[0].rated}}</li>
        <li>
          <strong>Awards: </strong>{{movie.[0].awards}}</li>
        <li>
          <strong>IMDB Rating: </strong>{{movie.[0].imdbRating}}</li>
        <li>
          <strong>Box Office: </strong>{{movie.[0].boxOffice}}</li>
      </ul>
    </div>
    <div class="comment-section">
      <div>
        <form id="addComment" action="/{{movie.[0].id}}" method="post">
          <label for="comment">Add a comment: </label>
          <input id="comment" name="comment" type="text" placeholder="e.g. I liked it" required>
          <button type="submit" form="addComment" class="left btn btn-outline-primary btn-default">Add</button>
        </form>
      </div>
      <div class="mt-3">
        {{#if comments}} {{#each comments}}
        <div class="card mt-1">
          <div class="card-body">
            <div class="flex-container just-content">
              <p>{{created_at}}</p>
              <a href="/{{movie_id}}/comment/{{id}}/edit">
                <button class="btn btn-outline-secondary">Edit</button>
              </a>
              <form action="/{{movie_id}}/comment/{{id}}?_method=DELETE" method="post">
                <button type="submit" class="btn btn-default btn-danger">
                  Delete
                </button>
              </form>
            </div>
            <p>{{comment}}</p>
          </div>
        </div>
        {{/each}} {{else}}
        <div class="alert alert-danger">There should be something here</div>
        {{/if}}
      </div>
    </div>
  </div>
</div>
