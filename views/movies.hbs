<div class="container">
  <div class="flex-container">
    <form id="addMovie" method="post" action="/movies">
      <label for="title">Add a movie: </label>
      <input id="title" name="title" type="text" placeholder="i.e. Gladiator" required>
      <button type="submit" form="addMovie" class="left btn btn-outline-primary btn-default">Add Movie</button>
    </form>
  </div>
  <div class="grid mt-3">
    {{#if movies}} {{#each movies}}
    <a href="/movies/{{id}}">
      <div class="card" style="width: 16rem;">
        <img class="card-img-top" src="{{Poster}}" alt="Movie poster">
        <div class="card-body">
          <h5 class="card-title">{{Title}} ({{Year}})</h5>
        </div>
      </div>
    </a>
    {{/each}} {{else}}
    <div class="alert alert-danger">There should be something here</div>
    {{/if}}
  </div>
</div>
